<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    app:cardCornerRadius="8dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <TextView
            android:id="@+id/textGossipInitiator"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/la_lorem_ipsum"
            android:textSize="16sp"
            android:maxLines="8"
            android:ellipsize="end"
            android:layout_margin="8dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent" />
        <TextView
            android:id="@+id/engagement"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="100 engagements"
            android:textStyle="bold|italic"
            android:layout_margin="8dp"
            app:layout_constraintTop_toBottomOf="@id/textGossipInitiator"
            app:layout_constraintStart_toStartOf="parent"/>
        <TextView
            android:id="@+id/timeOfGossip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="10:47pm"
            android:textStyle="bold"
            android:layout_margin="8dp"
            app:layout_constraintTop_toBottomOf="@id/textGossipInitiator"
            app:layout_constraintEnd_toStartOf="@id/dateOfGossip"/>
        <TextView
            android:id="@+id/dateOfGossip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="02-10-1998"
            android:textStyle="bold"
            android:layout_margin="8dp"
            app:layout_constraintTop_toBottomOf="@id/textGossipInitiator"
            app:layout_constraintEnd_toEndOf="parent"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>