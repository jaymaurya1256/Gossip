<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="8dp"
    android:layout_margin="8dp"
    app:contentPadding="8dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <TextView
            android:id="@+id/textView_gossip_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/la_lorem_ipsum"
            android:textSize="16sp"
            android:maxLines="8"
            android:ellipsize="end"
            android:layout_margin="8dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <TextView
            android:id="@+id/textView_gossip_tags"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Android, Kotlin, XML"
            android:textStyle="bold|italic"
            android:layout_margin="8dp"
            app:layout_constraintTop_toBottomOf="@id/textView_gossip_title"
            app:layout_constraintStart_toStartOf="parent"/>

        <TextView
            android:id="@+id/textView_gossip_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="27 Jan 2023"
            android:layout_margin="8dp"
            app:layout_constraintTop_toBottomOf="@id/textView_gossip_tags"
            app:layout_constraintStart_toStartOf="parent"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
</com.google.android.material.card.MaterialCardView>